@{
    ViewData["Title"] = "Register Us Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DernSupport2</title>
    <style>
        .register-hero {
            background-color: #17a2b8;
            color: #fff;
            padding: 50px 20px;
            text-align: center;
        }

            .register-hero h1 {
                margin: 0;
                font-size: 2.5rem;
            }

            .register-hero p {
                font-size: 1.25rem;
                margin-top: 10px;
            }

        .register-content {
            padding: 40px 20px;
            max-width: 800px;
            margin: auto;
            background-color: #f8f9fa;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .register-form {
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

            .register-form h2 {
                font-size: 2rem;
                margin-bottom: 20px;
                color: #333;
                text-align: center;
            }

            .register-form form {
                display: flex;
                flex-direction: column;
            }

            .register-form input {
                margin-bottom: 15px;
                padding: 10px;
                border: 1px solid #ddd;
                border-radius: 4px;
                font-size: 1rem;
                width: 100%;
            }

            .register-form button {
                background-color: #17a2b8;
                color: #fff;
                padding: 10px;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                font-size: 1rem;
                transition: background-color 0.3s;
            }

                .register-form button:hover {
                    background-color: #138496;
                }

        .form-link {
            text-align: center;
            margin-top: 10px;
        }

            .form-link a {
                color: #17a2b8;
                text-decoration: none;
            }

                .form-link a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <section class="register-hero">
        <h1>Welcome to the Register Page</h1>
        <p>Join us by filling out the registration form below.</p>
    </section>

    <section class="register-content">
        <div class="register-form">
            <h2>Create Your Account</h2>
            <form>
                <input type="text" placeholder="Full Name" required />
                <input type="email" placeholder="Email Address" required />
                <input type="password" placeholder="Password" required />
                <input type="password" placeholder="Confirm Password" required />
                <button type="submit">Register</button>
            </form>
            <div class="form-link">
                <p>Already have an account? <a href="@Url.Action("Login", "Home")">Login here</a>.</p>
            </div>
        </div>
    </section>
</body>
</html>

